<% include partials/header%>

    <div class="container">
        <% blogs.forEach(function(blog){ %>
	    <div id="display">
	       <div class="row">
	            <div class="col-sm-5" id="image"><img src="<%=blog.image.substring(6)%>"></div>       
	       	    <div class="col-sm-7">
	       	    	<div id="title"><%=blog.title%></div>
	       	    	<!-- <div id="date">BY <a href="#" id="blogUser"><%=blog.author.username%></a><%=new Date(Number(blog.image.substring(24,37))).toLocaleString()%></div> -->
	       	    	<div id="date"><span>BY <a href="#" id="blogUser"><%=blog.author.username%></a></span><%=new Date(Number(blog.image.substring(24,37))).toString().substring(4,15).toUpperCase()%></div>

	       	    	<div id="content"></div>
	                <div id="show"><a href="/blogs/<%=blog._id%>">Show</a></div>    
	       	    </div>

	       </div>
	    </div>
	    <% }); %>	
    </div>
    

<% include partials/footer%>